<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<fx:root xmlns:fx="http://javafx.com/fxml/1" type="AnchorPane"
         id="AnchorPane" xmlns="http://javafx.com/javafx/8">
    <HBox>
        <VBox>
            <Label text="%practice.correct_answers"/>
            <ListView fx:id="lstCorrect"/>
        </VBox>
        <VBox>
            <Label text="%practice.incorrect_answers"/>
            <ListView fx:id="lstIncorrect"/>
        </VBox>
        <VBox>
            <Label fx:id="lblWord" />
            <TextArea fx:id="txtDescription" editable="false" wrapText="true"/>
            <ImageView fx:id="imageView" preserveRatio="true" 
                       fitWidth="300" fitHeight="260" />
        </VBox>
    </HBox>
</fx:root>
