<?xml version="1.0" encoding="UTF-8"?>

<?import com.helegris.szorengeteg.controller.component.ClickableLabel?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<fx:root xmlns:fx="http://javafx.com/fxml/1" type="AnchorPane"
         id="AnchorPane" prefHeight="300.0" prefWidth="450.0"
         xmlns="http://javafx.com/javafx/8">
    <VBox spacing="15">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
        <HBox spacing="5" maxWidth="450">
            <ImageView fx:id="imageView" fitWidth="150" fitHeight="130"
                       pickOnBounds="true" preserveRatio="true" />
            <VBox>
                <Label fx:id="lblDescription" wrapText="true"
                       style="-fx-font-size: 14pt;" />
            </VBox>
        </HBox>
        <HBox spacing="15" alignment="CENTER">
            <TextField fx:id="txtWord" prefWidth="200" />
            <Button fx:id="btnCheck" text="%practice.check" />
        </HBox>
        <HBox spacing="15" alignment="CENTER">
            <ClickableLabel fx:id="lblDontKnow" text="%practice.dont_know" />
            <ClickableLabel fx:id="lblHelp" text="%practice.help" />
        </HBox>
        <HBox spacing="15" alignment="CENTER">
            <Label fx:id="lblResult" visible="false" />
            <Button fx:id="btnNextCard" text="%practice.next" visible="false" />
        </HBox>
    </VBox>
</fx:root>
