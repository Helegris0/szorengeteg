<?xml version="1.0" encoding="UTF-8"?>

<?import com.helegris.szorengeteg.ui.AudioIcon?>
<?import com.helegris.szorengeteg.ui.ClickableLabel?>
<?import com.helegris.szorengeteg.ui.CloseIcon?>
<?import com.helegris.szorengeteg.ui.practice.VisualHelp?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<fx:root xmlns:fx="http://javafx.com/fxml/1" type="AnchorPane"
         id="AnchorPane" xmlns="http://javafx.com/javafx/8">
    <VBox AnchorPane.topAnchor="15" AnchorPane.leftAnchor="15"
          AnchorPane.rightAnchor="15" spacing="10">
        <HBox spacing="5">
            <VisualHelp fx:id="visualHelp" fitWidth="300" fitHeight="260"
                        pickOnBounds="true" preserveRatio="true" />
            <VBox HBox.hgrow="ALWAYS" alignment="CENTER">
                <Label text="①" />
                <Label fx:id="lblDescription" wrapText="true"
                       style="-fx-font-size: 27pt;" />
            </VBox>
            <ImageView fx:id="helpIcon" fitWidth="64" fitHeight="64" />
        </HBox>
        <HBox spacing="5" alignment="CENTER_LEFT">
            <Label text="④" />
            <ImageView fx:id="imgVisual" />
            <ClickableLabel fx:id="lblVisual" text="%practice.visual_help" />
        </HBox>
        <HBox spacing="15">
            <HBox fx:id="hboxInput" />
            <VBox spacing="-10">
                <HBox spacing="5" alignment="CENTER_LEFT" prefHeight="70">
                    <Label text="②" />
                    <ImageView fx:id="imgInput" />
                    <ClickableLabel fx:id="lblInput" text="%practice.word_input" />
                </HBox>
                <HBox spacing="5" alignment="CENTER_LEFT">
                    <Label text="③" />
                    <ImageView fx:id="imgHelp" />
                    <ClickableLabel fx:id="lblHelp" text="%practice.help" />
                </HBox>
            </VBox>
        </HBox>
        <HBox spacing="10">
            <VBox>
                <HBox spacing="5" alignment="CENTER_LEFT">
                    <Label text="⑤" />
                    <ImageView fx:id="imgGiveUp" />
                    <ClickableLabel fx:id="lblGiveUp" text="%practice.give_up"
                                    minWidth="300" />
                </HBox>
                <HBox spacing="5" alignment="CENTER_LEFT">
                    <Label text="⑥" />
                    <ImageView fx:id="imgPlayAudio" />
                    <ClickableLabel fx:id="lblPlayAudio" text="%practice.play_audio" />
                    <ImageView fx:id="audioIcon" fitWidth="40" fitHeight="40" />
                </HBox>
            </VBox>
            <Pane HBox.hgrow="ALWAYS" />
            <VBox>
                <HBox spacing="5" alignment="CENTER_RIGHT">
                    <ClickableLabel fx:id="lblChooseTopic" text="%practice.choose_topic" />
                    <ImageView fx:id="imgChooseTopic" />
                </HBox>
                <HBox spacing="5" alignment="CENTER_RIGHT">
                    <ClickableLabel fx:id="lblDefault" text="%practice.default" />
                    <ImageView fx:id="imgDefault" />
                </HBox>
            </VBox>
        </HBox>
        <HBox spacing="5" alignment="CENTER_LEFT">
            <ImageView fx:id="imgNext" />
            <ClickableLabel fx:id="lblNext" text="%practice.next" />
            <ImageView fx:id="imgPrev" />
            <ClickableLabel fx:id="lblPrev" text="%practice.prev" />
            <Pane HBox.hgrow="ALWAYS" />
            <Label text="%practice.topic_ordinal" />
            <TextField fx:id="txtTopicOrdinal" prefWidth="60" prefHeight="50"
                       style="-fx-font-size: 24;" />
            <Label text="%practice.word_ordinal" />
            <TextField fx:id="txtWordOrdinal" prefWidth="60" prefHeight="50"
                       style="-fx-font-size: 24;" />
            <ImageView fx:id="imgJump" fitWidth="40" fitHeight="40" />
        </HBox>
        <HBox spacing="5" alignment="CENTER_LEFT">
            <Pane HBox.hgrow="ALWAYS" />
            <ImageView fx:id="imgQuit" />
            <ClickableLabel fx:id="lblQuit" text="Kilépés" />
        </HBox>
    </VBox>
</fx:root>
