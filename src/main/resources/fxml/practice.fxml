<?xml version="1.0" encoding="UTF-8"?>

<?import com.helegris.szorengeteg.ui.AudioIcon?>
<?import com.helegris.szorengeteg.ui.ClickableLabel?>
<?import com.helegris.szorengeteg.ui.CloseIcon?>
<?import com.helegris.szorengeteg.ui.practice.VisualHelp?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<fx:root xmlns:fx="http://javafx.com/fxml/1" type="AnchorPane"
         id="AnchorPane" xmlns="http://javafx.com/javafx/8">
    <VBox AnchorPane.topAnchor="0" AnchorPane.rightAnchor="0" 
          AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" spacing="15">
        <CloseIcon fx:id="closeIcon" fitWidth="64" fitHeight="64" />
        <HBox spacing="5" alignment="CENTER">
            <RadioButton fx:id="rdLastVisual" disable="true" />
            <VisualHelp fx:id="visualHelp" fitWidth="300" fitHeight="260"
                       pickOnBounds="true" preserveRatio="true" />
            <Label fx:id="lblDescription" wrapText="true"
                       style="-fx-font-size: 28pt;" />
        </HBox>
        <HBox fx:id="hboxInput" alignment="CENTER" />
        <HBox spacing="15" alignment="CENTER">
            <RadioButton fx:id="rdLastGaveUp" disable="true" />
            <ClickableLabel fx:id="lblDontKnow" text="%practice.dont_know" />
            <RadioButton fx:id="rdLastHelp" disable="true" />
            <ClickableLabel fx:id="lblHelp" text="%practice.help" />
        </HBox>
        <HBox spacing="15" alignment="CENTER">
            <Label fx:id="lblResult" visible="false" />
            <Button fx:id="btnNextCard" text="%practice.next" visible="false" />
        </HBox>
        <HBox spacing="15" alignment="CENTER">
            <AudioIcon fx:id="audioIcon" visible="false"
                       fitWidth="80" fitHeight="80"/>
        </HBox>
    </VBox>
</fx:root>
